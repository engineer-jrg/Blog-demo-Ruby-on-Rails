<% content_for :title do %>
  Sign up
<% end %>

<div class="row text-center p-5">
  <div class="col-md-4 mx-auto border border-muted rounded p-3">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "form-signup"}) do |f| %>
        <img class="mb-2" src="https://getbootstrap.com/docs/4.0/assets/brand/bootstrap-solid.svg" alt="" width="72" height="72">
        <h1 class="h3 mb-2 font-weight-normal">Sign Up</h1>
        <div class="form-group text-left">
          <%= f.label "Email address", for: "user_email" %>
          <%= f.email_field :email, class: "form-control", autofocus: true, autocomplete: "email", placeholder:"Email address" %>
        </div>

        <div class="form-group text-left">
          <%= f.label :password %>
          <%= f.password_field :password, class: "form-control", autocomplete: "new-password", placeholder:"Password" %>
          <% if @minimum_password_length %>
          <small class="form-text text-muted">(<%= @minimum_password_length %> characters minimum)</small>
          <% end %>
        </div>

        <div class="form-group text-left">
          <%= f.label :password_confirmation %>
          <%= f.password_field :password_confirmation, class: "form-control", autocomplete: "new-password", placeholder:"Password confirmation" %>
        </div>
        
        <button class="btn btn-lg btn-primary btn-block mb-3" type="submit">Sign up</button>
        <%= render "devise/shared/links" %>
        <p class="mt-3 mb-0 text-muted">&copy; 2020</p>
      </form>
    <% end %>
  </div>
</div>

